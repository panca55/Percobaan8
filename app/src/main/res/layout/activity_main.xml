<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Linear_layout"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgView_1"
            android:padding="16dp"
            app:srcCompat= "@drawable/logo_firebase"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomText"
            android:layout_marginTop="32dp"
            android:text="Selamat datang di Firebase"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/mainText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_border"
            android:ems="10"
            android:hint="Enter name..."
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/mainText2"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_border"
            android:ems="10"
            android:hint="Enter Stambuk..."
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saveBtn"
            android:layout_margin="32dp"
            android:background="@drawable/button_background"
            android:text="Save to FireStore"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginBottom="32dp"
            android:text="Go to List"/>
    </LinearLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progress_bar"
        android:padding="80dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>